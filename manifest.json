{
  "manifest_version": 3,
  "name": "日本語的検索結果画面瞬間移動拡張",
  "version": "1.0.0",
  "description": "Google検索結果が中国語の場合、日本語の結果ページへリダイレクトします",
  "host_permissions": [
    "*://www.google.com/*",
    "*://www.google.co.jp/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://www.google.co.jp/search*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}
